#! /bin/bash

set -x
set -euo pipefail

wd=$(dirname "$0")
src_root="$wd"/../../..

if test "${GRADLE_EXTRAS_SOURCE:-}" != ""; then
    # shellcheck disable=SC1090
    source "$GRADLE_EXTRAS_SOURCE"
fi

"$src_root"/gradlew \
    --project-dir "$src_root" \
    clean \
    bundleGooglePlay \
    assembleSelfHosted \
    ${GRADLE_EXTRA_ARGS+"${GRADLE_EXTRA_ARGS[@]}"}

open -R "$src_root"/app/build/outputs/bundle/googlePlayRelease/app-googlePlay-release.aab
open -R "$src_root"/app/build/outputs/apk/selfHosted/release/app-selfHosted-release.apk
